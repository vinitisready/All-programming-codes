import java.util.*;

 

public class Solution {

public static int[] getFloorAndCeil(int[] a, int n, int x) {

int floor = -1;

int ceil = -1;

 

// Binary search for the floor and ceiling

int low = 0, high = n - 1;

 

while (low <= high) {

int mid = low + (high - low) / 2;

 

if (a[mid] == x) {

// If x is found, it is both floor and ceiling

return new int[] {x, x};

} else if (a[mid] < x) {

// Move right to find a larger number for the ceiling

floor = a[mid];

low = mid + 1;

} else {

// Move left to find a smaller number for the floor

ceil = a[mid];

high = mid - 1;

}

}

 

return new int[] {floor, ceil};

}

}
